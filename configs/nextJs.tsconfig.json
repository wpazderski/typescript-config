{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./react.tsconfig.json",
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */

        /* Language and Environment */
        "jsx": "preserve",

        /* JavaScript Support */
        "allowJs": true,
        "checkJs": true,

        /* Emit */
        "noEmit": true,

        /* Interop Constraints */
        "isolatedDeclarations": false,

        /* Plugins */
        "plugins": [
            {
                "name": "next"
            }
        ]
    }
}
